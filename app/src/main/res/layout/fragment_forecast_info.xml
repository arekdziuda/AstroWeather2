<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    tools:context=".fragments.ForecastInfoFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="3"
        android:stretchColumns="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bieżący czas:"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/city_current_time_txt_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2019-04-09 22:57:26 GMT+1"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/forecast_day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dayOfWeek"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/forecast_temp1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="temperature"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/forecast_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/error" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/forecast_day2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dayOfWeek"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/forecast_temp2"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="temperature"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/forecast_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/error" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/forecast_day3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dayOfWeek"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/forecast_temp3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="temperature"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/forecast_image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/error" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/forecast_day4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
